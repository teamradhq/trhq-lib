{
  "extends": "@tsconfig/node12/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "js",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["test/*"]
    }
  }
}
